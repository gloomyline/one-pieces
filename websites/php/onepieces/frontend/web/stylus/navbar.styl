@import './variables'
@import './mixins'

#nav-bar
  fixed: left top
  width: 100%
  min-width: 1201px
  background: white
  z-index: 999
  .nav-title
    padding: 16px 0
    color: $color-black
    .title-left
      font-size: 0
      .logo-wrap
        inline-block()
      .left-content
        inline-block()
        padding-left: 8px
        border-left: 1px solid $color-green
        .company-name
          font-size: 24px
          font-weight: 600
    .title-right
      font-size: 0
      .icon-wrap
        inline-block()
      .right-content
        inline-block()
        padding-left: 12px
        font-size: 16px
        .phone-number, .email
          margin: 0
  .nav-wrap
    position: relative
    width: 100%
    height: 70px
    background-color: $color-green
    .nav
      display: flex
      .nav-item
        flex: 1
        height: 70px
        padding-top: 15px
        font-size: 16px
        .nav-link
          color: white
          &.active
            position: relative
            &:after
              content: ''
              display: block
              position: absolute
              left: 50%
              bottom: 0
              width: 72px
              height: 2px
              margin-left: -36px
              background: white
    #dropdown-list-product-center
      display: none
      width: 100%
      absolute: top 70px left
      background-color: rgba(229, 245, 253, .7)
      .consumer-finance, .block-chain
        inline-block()
        margin: 0
        padding: 0
        list-style: none
        .title
          padding: 15px 0
          font-size: 18px
          font-weight: bold
          color: $color-green
        li[class$='-item']
          width: 200px
          height: 60px
          padding: 15px 20px
          font-size: 18px
          font-weight: bold
          a
            display: block
            height: 30px
            color: white
            background-color: $color-green
            &:hover
              color: $color-green
              text-decoration: none
              background-color: white
